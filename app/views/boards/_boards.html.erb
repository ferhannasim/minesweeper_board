<table class="table">
  <thead>
    <tr>
      <th>Board Name</th>
      <th>Board Email</th>
      <th>Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% boards.each do |board| %>
    <tr>
      <td><%= link_to board.board_name, board_path(board) %></td>
      <td><%= board.email %></td>
      <td><%= board.created_at.strftime("%m-%d-%Y At %I:%M%p") %></td>
      <td><%= link_to 'delete', board_path(board), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>